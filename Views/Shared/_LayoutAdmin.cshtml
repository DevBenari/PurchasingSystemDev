    <script>
        // Hubungkan ke SignalR
        var connection = new signalR.HubConnectionBuilder().withUrl("/chathub").build();

        // Event saat koneksi mulai
        connection.start().then(function () {
            console.log("SignalR connected.");
        }).catch(function (err) {
            return console.error(err.toString());
        });

        // Fungsi untuk memperbarui tampilan jumlah karyawan
        function updateData(totalKaryawan) {
            var notificationElement = document.getElementById("dataCountNotification");

            console.log("Pangil Count .");
            if (notificationElement) {
                if (totalKaryawan == '0' || !totalKaryawan || isNaN(totalKaryawan)) {
                    notificationElement.style.display = '0';
                } else {
                    notificationElement.textContent = `${totalKaryawan}`;
                    localStorage.setItem('totalKaryawan', totalKaryawan);
                }
            }
        }

        // Menerima notifikasi dari SignalR dan memperbarui data
        connection.on("UpdateDataCount", function (totalKaryawan) {
            console.log("Total karyawan diterima  : ", totalKaryawan);
            updateData(totalKaryawan);

            // Simpan total karyawan ke Local Storage
            localStorage.setItem('totalKaryawan', totalKaryawan);
        });


        //LONGER

        // Fungsi untuk memperbarui tampilan jumlah karyawan
        function updateDataLog(loggerData) {
            var notificationElement = document.getElementById("loggerContainer");
            localStorage.setItem('loggerData', loggerData);
            // var loggerData = loggerData.replace(/[\[\]",]/g, '');
          
            if (notificationElement) {
                // Kosongkan kontainer sebelumnya
                notificationElement.innerHTML = "";

                // Jika loggerData masih berbentuk string, parse menjadi array
                if (typeof loggerData === "string") {
                    var entries = loggerData.split(',').map(entry => entry.trim()).filter(Boolean); // Pisahkan dan hapus spasi

                    var parsedData = [];
                    for (var i = 0; i < entries.length; i += 3) {
                        parsedData.push({
                            FS_USERNAME: entries[i] ? entries[i] : "", // Username
                            FS_PESAN: entries[i + 1] ? entries[i + 1] : "", // Pesan
                            FS_JAM: entries[i + 2] ? entries[i + 2] : "" // Jam
                        });
                    }
                    loggerData = parsedData;
                }

                // Pastikan loggerData sekarang berbentuk array
                if (Array.isArray(loggerData)) {
                    // Iterasi setiap elemen dan tambahkan HTML hanya jika data tidak kosong
                    loggerData.forEach(function (empl) {
                        var username = ((empl.FS_USERNAME || "Unknown User").replace(/["\[\]]/g, '')).replace(/&quot;/g, '');
                        var message = ((empl.FS_PESAN || "No Message").replace(/["\[\]]/g, '')).replace(/&quot;/g, '');
                        var time = ((empl.FS_JAM || "No Timestamp").replace(/["\[\]]/g, '')).replace(/&quot;/g, '');

                        console.log("Dt : ", username);
                        // Pastikan ada data valid sebelum menampilkan
                        if (username && message && time) {
                            var item = `
                                <a href="#" class="dropdown-item">
                                    <div class="media">
                                        <div class="media-body">
                                            <h3 class="dropdown-item-title">
                                              ${message} Created, By ${username}
                                                <span class="float-right text-sm text-danger"><i class="fas fa-star"></i></span>
                                            </h3>
                                            <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i>${time}</p>
                                        </div>
                                    </div>
                                </a>
                            `;
                            // Tambahkan elemen baru ke loggerContainer
                            notificationElement.insertAdjacentHTML('beforeend', item);
                        } else {
                            var item = `
                                         <a href="#" class="dropdown-item dropdown-footer">Data Kosong</a>
                                            `;
                            // Tambahkan elemen baru ke loggerContainer
                            notificationElement.insertAdjacentHTML('beforeend', item);
                        }
                    });
                }
            }
        }


        // Menerima notifikasi dari SignalR dan memperbarui data
        connection.on("UpdateDataLogger", function (loggerData) {
            console.log("Total karyawan diterima dari server ini: ", loggerData);
            updateDataLog(loggerData);

            // Simpan total karyawan ke Local Storage
            localStorage.setItem('loggerData', loggerData);
        });

        // Saat halaman dimuat, periksa Local Storage
        window.onload = function () {
            var storedTotalKaryawan = localStorage.getItem('totalKaryawan');
            if (!storedTotalKaryawan) {
                // Jika tidak ada di LocalStorage, gunakan data dari ViewBag
                storedTotalKaryawan = window.initialData.totalKaryawan;
            }
            console.log("Total karyawan diterima dari Local Storage atau ViewBag: ", storedTotalKaryawan);
            updateData(storedTotalKaryawan);

            var storedLoggerData = localStorage.getItem('loggerData');
            if (!storedLoggerData) {
                // Jika tidak ada di LocalStorage, gunakan data dari ViewBag
                storedLoggerData = window.initialData.loggerData;
            }
            console.log("Logger data diterima dari Local Storage atau ViewBag: ", storedLoggerData);
            updateDataLog(storedLoggerData);
        };
    </script>
