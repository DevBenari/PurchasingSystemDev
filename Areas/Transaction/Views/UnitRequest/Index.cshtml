@{
    ViewData["Title"] = "List Unit Request";
    //Layout = "~/Views/Shared/_TopNavbarOrder.cshtml";
}

@using PurchasingSystemApps.Areas.Transaction.Models;
@using PurchasingSystemApps.Models;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model IEnumerable<UnitRequest>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-cyan">
                <div class="card-header">
                    <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form enctype="multipart/form-data" asp-action="Index" asp-controller="UnitRequest" method="post" class="form-horizontal">
                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    @if (signInManager.IsSignedIn(User))
                                    {
                                        <a class="btn bg-indigo" asp-action="CreateUnitRequest" asp-controller="UnitRequest" asp-area="Transaction">
                                            <div style="color:#ffffff">Add New</div>
                                        </a>
                                    }
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="input-group date" id="tglAwalPencarian" data-target-input="nearest">
                                        <div class="input-group-append" data-target="#tglAwalPencarian" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                        <input autocomplete="off" value="@ViewBag.tglAwalPencarian" name="tglAwalPencarian" type="text" class="form-control datetimepicker-input" placeholder="Tanggal Awal Pencarian..." />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <div class="input-group date" id="tglAkhirPencarian" data-target-input="nearest">
                                            <div class="input-group-append" data-target="#tglAkhirPencarian" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                            <input autocomplete="off" value="@ViewBag.tglAkhirPencarian" name="tglAkhirPencarian" type="text" class="form-control datetimepicker-input" placeholder="Tanggal Akhir Pencarian..." />
                                            <button type="submit" class="btn btn-default">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-5">
                                <div class="form-group">
                                    <select class="form-control" name="filterOptions" id="btnFilterBy">
                                        <option value="" hidden disabled selected>--Filter by--</option>
                                        <option value="Today" selected=@(ViewBag.SelectedFilter == "Today")>Today</option>
                                        <option value="Last Day" selected=@(ViewBag.SelectedFilter == "Last Day")>Last Day</option>
                                        <option value="Last 7 Days" selected=@(ViewBag.SelectedFilter == "Last 7 Days")>Last 7 Days</option>
                                        <option value="Last 30 Days" selected=@(ViewBag.SelectedFilter == "Last 30 Days")>Last 30 Days</option>
                                        <option value="This Month" selected=@(ViewBag.SelectedFilter == "This Month")>This Month</option>
                                        <option value="Last Month" selected=@(ViewBag.SelectedFilter == "Last Month")>Last Month</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table id="tblTemplate" class="table table-hover table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Create Date</th>
                                        <th>Create By</th>
                                        <th>UR Number</th>
                                        <th>Unit Location</th>
                                        <th>Unit Request By</th>
                                        <th>Warehouse Approve By</th>                                        
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pr in Model)
                                    {
                                        <tr data-href="@Url.Action("DetailUnitRequest", "UnitRequest", new {id=pr.UnitRequestId})">
                                            <th></th>
                                            <td>@pr.CreateDateTime.ToString("dd MMMM yyyy")</td>
                                            <td>@pr.ApplicationUser.NamaUser</td>
                                            <td>@pr.UnitRequestNumber</td>
                                            <td>@pr.UnitLocation.UnitLocationName</td>
                                            <td>@pr.UnitRequestManager.FullName</td>
                                            <td>@pr.WarehouseApproval.FullName</td>                                            
                                            @if (pr.Status == "Request")
                                            {
                                                <td>@pr.Status</td>
                                            }
                                            else if (pr.Status == "Approved")
                                            {
                                                <td><div style="color:blue"><b>@pr.Status</b></div></td>
                                            }
                                            else if (pr.Status == "InProcess")
                                            {
                                                <td><div style="color:orangered"><b>@pr.Status</b></div></td>
                                            }
                                            else
                                            {
                                                <td><div style="color:forestgreen"><b>@pr.Status</b></div></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <span class="error">* Double click in the row table to get data</span>
                    </form>
                </div>
                <!-- /.card-body -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Berhasil", '@TempData["SuccessMessage"]', "success");
                        };
                    </script>
                }
                @if (TempData["WarningMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Gagal Simpan", '@TempData["WarningMessage"]', "warning");
                        };
                    </script>
                }
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts{
    <script src="~/scripts/tabletemplate.js"></script>

    <script>
        $(document).ready(function () {
            $("#btnFilterBy").data('placeholder');

            $('#btnFilterBy').on('change', function () {
                $(this).closest('form').submit();
            });

            $('#tglAwalPencarian').datetimepicker({
                format: 'DD MMMM YYYY',
                timepicker: false,
                enableHours: false,
                ignoreReadonly: true,
                allowInputToggle: true,
                useCurrent: false,
                keepOpen: false,
                mask: true

            })

            $('#tglAkhirPencarian').datetimepicker({
                format: 'DD MMMM YYYY',
                timepicker: false,
                enableHours: false,
                ignoreReadonly: true,
                allowInputToggle: true,
                useCurrent: false,
                keepOpen: false,
                mask: true

            })
            $('.datetimepicker-input').on('keydown paste ', function (e) {
                e.preventDefault();
                return false;
            });


            $('.datetimepicker-input').on('focus', function () {
                $(this).closest('.input-group').find('.input-group-append').click();
            });
        });
    </script>

    <style>
        tr[data-href] {
            cursor: pointer;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");

            rows.forEach(row => {
                row.addEventListener("dblclick", () => {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>

    <style>
        span.error {
            display: block;
            color: #347FC4;
            font-size: 90%;
        }

        tr.error {
            background-color: rgba(255,0,0,0.35);
        }

        /*css for table*/
        .container td {
            vertical-align: top;
        }

        .tablecontainer table {
            width: 100%;
            border-collapse: collapse;
            border-top: 1px solid #BFAEAE;
            border-right: 1px solid #BFAEAE;
        }

        .tablecontainer th {
            border-bottom: 2px solid #BFAEAE;
        }

        .tablecontainer th, .tablecontainer td {
            text-align: center;
            border-left: 1px solid #BFAEAE;
            padding: 5px;
            border-bottom: 1px solid #BFAEAE;
        }

        .ui-widget {
            font-size: 12px !important;
        }
    </style>
}